extends base

block content
    // ================login_part Area =================
    section.login_part.padding_top
        .container
            .row.align-items-center
                .col-lg-6.col-md-6
                    .login_part_text.text-center
                        .login_part_text_iner
                            h2 Already have an account ? 
                            //- p
                            //-     | There are advances being made in science and technology
                            //-     | everyday, and a good example of this is the
                            a.btn_3(href='/login') Click here to Login to our Shop
                .col-lg-6.col-md-6
                    .login_part_form
                        .login_part_form_iner.text-center
                            h3
                                br
                                |                                 Sign up now
                            form.row.contact_form(action='#' method='post' novalidate='novalidate')
                                .col-md-12.form-group.p_star
                                    input#name.form-control(type='text' name='name' value='' placeholder='name')
                                .col-md-12.form-group.p_star
                                    input#email.form-control(type='email' name='email' placeholder='you@example.com', required)
                                .col-md-12.form-group.p_star
                                    input#password.form-control(type='password' name='password' placeholder='password', required)
                                .col-md-12.form-group.p_star
                                    input#confirmPassword.form-control(type='password' name='password' placeholder='Confirm Password', required)
                                .col-md-12.form-group
                                    button.btn_3(type='submit' value='submit')
                                        | Sign up
                                    
    // ================login_part end =================
